{
  "name": "mcp-server",
  "version": "0.1.0",
  "description": "MCP for flutter application",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run generate-rpc-handlers && tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\" && npm run copy-yaml-files",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "bi": "npm run prepare && npm run inspector",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "start": "node build/index.js",
    "generate-rpc-handlers": "node --loader ts-node/esm scripts/generate_rpc_handlers.ts",
    "copy-yaml-files": "mkdir build\\tools 2> nul || ver > nul && copy src\\tools\\server_tools_flutter.yaml build\\tools\\ && copy src\\tools\\server_tools_custom.yaml build\\tools\\"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@types/axios": "^0.14.4",
    "@types/js-yaml": "^4.0.9",
    "@types/ws": "^8.18.1",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "ws": "^8.18.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/node": "^22.13.14",
    "@types/yargs": "^17.0.33",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
